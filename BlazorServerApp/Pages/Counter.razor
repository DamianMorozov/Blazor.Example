@page "/counter"

<h1>Counter</h1>

<p>Current count: @_currentCount</p>
<input @bind="IncrementAmount" />
<p>Increment amount: @IncrementAmount</p>

<p />
<button class="btn btn-dark" @onclick="Increment">Increment</button>
<button class="btn btn-dark" @onclick="Decrement">Decrement</button>

@code {
    private int _currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    private void Increment()
    {
        _currentCount += IncrementAmount;
    }

    private void Decrement()
    {
        _currentCount -= IncrementAmount;
    }
}
